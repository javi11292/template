{
  "name": "server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "npm run docker -- up --build",
    "dev": "npm run docker -- -f docker-compose.development.yml up --build",
    "docker": "docker-compose -f docker-compose.yml",
    "nodemon": "node scripts/nodemon"
  },
  "dependencies": {
    "cors": "^2.8.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.0",
    "typescript": "^4.2.0"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.19.0",
    "eslint-config-airbnb": "^18.2.0",
    "nodemon": "^2.0.0"
  },
  "eslintConfig": {
    "extends": "airbnb",
    "parser": "@typescript-eslint/parser",
    "rules": {
      "consistent-return": "off",
      "no-use-before-define": "off",
      "import/no-extraneous-dependencies": "off",
      "import/prefer-default-export": "off",
      "no-console": "off"
    },
    "settings": {
      "import/resolver": {
        "node": {
          "paths": "src"
        }
      }
    }
  }
}